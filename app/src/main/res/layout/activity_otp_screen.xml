<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:id="@+id/lnt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/otp"
            app:lottie_scale="0.1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="Verification Code"
            android:textColor="#000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="OTP has been sent to your mobie\n number. please verify"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/first_text"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bordercredentials_otp_left"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/second_text"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/bordercredentials_otp_midlle"
                android:digits="1234567890"

                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/third_text"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"

                android:background="@drawable/bordercredentials_otp_midlle"
                android:digits="1234567890"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/fourth_text"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/bordercredentials_otp_right"
                android:digits="1234567890"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"

                android:textColor="@color/black" />

        </LinearLayout>

        <TextView
            android:id="@+id/resend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Resend in 30 Sec"
            android:textColor="@color/app_color" />

        <Button
            android:id="@+id/verify"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/borderbutton"
            android:foreground="?selectableItemBackgroundBorderless"
            android:text="VERIFY"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>


</RelativeLayout>